<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Space
        android:id="@+id/list_item_spacer"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_below="@id/list_item_note_text"/>

    <TextView
        android:id="@+id/list_item_note_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/list_item_note_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_note_title"
        />

    <ImageButton
        android:id="@+id/list_item_del_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/delete_item"
        android:src="@android:drawable/ic_delete" />
</RelativeLayout>